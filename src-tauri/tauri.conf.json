{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "vf-robber",
  "version": "0.1.0",
  "identifier": "com.flo.vf-robber",

  "build": {
    "frontendDist": "../frontend/dist/vf-robber-angular/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Very Fast Robber",
        "width": 1100,
        "height": 800,
        "resizable": false,
        "maximizable": false,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/vfr-logo-32x32.png",
      "icons/vfr-logo-128x128.png",
      "icons/icon.icns",
      "icons/vfr-logo.ico"
    ]
  }
}
